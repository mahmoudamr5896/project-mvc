@model Demo.ViewModel.Loginuserviewmodel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f5f5f5;">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <h3 class="text-center mb-4">Welcome Back</h3>

        <button class="btn btn-light w-100 mb-3 border bg-primary" style="border-color: #ccc;">
            <img src="/assets/img/googleiconjpg.jpg" alt="Google logo" style="height: 20px; margin-right: 10px;"> Sign in with Google
        </button>

        <div class="text-center my-2">or</div>

        <form asp-action="login">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Email</label>
                <input asp-for="Username" class="form-control" placeholder="Email" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="RemmberME" id="rememberMeCheckbox" />
                <label class="form-check-label" for="rememberMeCheckbox">Remember Me</label>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Sign in" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="ForgotPassword" class="text-decoration-none">Forgot password?</a>
        </div>

        <div class="text-center mt-2">
            <p class="mb-0">Join With Us? <a asp-action="Register" class="text-decoration-none">Join now</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
